<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fillViewport="true"
    tools:context=".ui.history.diagnosis.DiagnosisActivity"
    >

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/teal_200"
       >
       <ProgressBar
           android:id="@+id/progressBar"
           style="?android:attr/progressBarStyleHorizontal"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           android:layout_weight="3"
           android:indeterminate="false"
           android:max="15"
           android:paddingLeft="5dp"
            android:background="@color/white"
           android:minHeight="50dp"
           android:progress="0"
           android:layout_marginStart="6dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toLeftOf="@id/tv_progress"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/tv_progress"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:padding="15dp"
           android:textColorHint="#7A8089"
           android:textSize="16sp"
           android:textStyle="bold"
           android:background="@color/white"
           android:layout_marginEnd="6dp"
           app:layout_constraintTop_toTopOf="@id/progressBar"
           app:layout_constraintLeft_toRightOf="@id/progressBar"
           app:layout_constraintRight_toRightOf="parent"
           android:text="0/15" />


       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           android:fontFamily="sans-serif-black"
           android:text="Gender"
           android:textColor="@color/black"
           android:textSize="30sp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/progressBar" />

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/img_question"
           android:layout_width="0dp"
           android:layout_height="200dp"
           android:src="@drawable/ic_gender"
           android:layout_marginTop="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/tv_title" />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_question"
           android:layout_width="0dp"
           android:layout_height="100dp"
           android:layout_marginTop="16dp"
           android:fontFamily="sans-serif-black"
           android:gravity="center"
           android:text="@string/gender"
           android:textSize="22sp"
          app:layout_constraintStart_toStartOf="@id/img_question"
           app:layout_constraintEnd_toEndOf="@id/img_question"
           app:layout_constraintBottom_toTopOf="@id/tv_detail"
           app:layout_constraintTop_toBottomOf="@id/img_question" />

       <androidx.appcompat.widget.AppCompatToggleButton
           android:id="@+id/tgl_detail"
           android:layout_width="60dp"
           android:layout_height="50dp"
           android:layout_marginVertical="16dp"
           android:gravity="center"
           android:src="@drawable/ic_show"
           android:textOff=""
           android:textOn=""
           android:layout_marginRight="16dp"
           android:background="@drawable/ic_show"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toTopOf="@id/tv_option_one"
           app:layout_constraintTop_toBottomOf="@id/tv_question" />
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_detail"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:minHeight="100dp"
           tools:text="@string/gender"
           android:textSize="16dp"
           android:visibility="gone"
           android:cursorVisible="false"
           android:focusable="false"
           android:layout_marginHorizontal="16dp"
          app:layout_constraintRight_toLeftOf="@id/tgl_detail"
          app:layout_constraintTop_toTopOf="@id/tgl_detail"
           app:layout_constraintLeft_toLeftOf="parent"
           android:background="@drawable/default_option_border_bg"
           app:layout_constraintBottom_toBottomOf="@id/tgl_detail"/>

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_option_one"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/tv_detail"
           android:text="Male"
           app:layout_constraintStart_toStartOf="@id/tv_question"
           app:layout_constraintEnd_toEndOf="@id/tv_question"
           app:layout_constraintBottom_toTopOf="@id/tv_option_two"
           android:padding="15dp"
           android:textColor="#7A8089"
           android:textSize="18sp"
           android:gravity="center"
           android:layout_marginTop="26dp"
           android:layout_marginBottom="16dp"
           android:layout_marginHorizontal="16dp"
           android:background="@drawable/default_option_border_bg"

           />
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_option_two"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/tv_option_one"
           android:text="Female"
           app:layout_constraintStart_toStartOf="@id/tv_option_one"
           app:layout_constraintEnd_toEndOf="@id/tv_option_one"
           android:padding="15dp"
           android:textColor="#7A8089"
           android:textSize="18sp"
           android:gravity="center"
           android:layout_marginTop="16dp"
           android:layout_marginBottom="16dp"
           android:background="@drawable/default_option_border_bg"

           />


       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btn_next"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           android:text="Next"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="@id/tv_option_two"
           app:layout_constraintStart_toStartOf="@id/tv_option_two"
           app:layout_constraintTop_toBottomOf="@id/tv_option_two"

           app:layout_constraintVertical_bias="0.45" />


   </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>